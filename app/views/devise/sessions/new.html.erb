
<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <br>
      <div class="card-panel light-blue darken-4">

          <%= image_tag ("bookface_full_white.png"), :class => "full-logo" %>

      </div>
      <div class="card-panel white">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-field ">
            <%= f.label :email, class: "light-blue-text text-darken-4" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "light-blue-text text-darken-4 validate" %>
          </div>

          <div class="input-field">
            <%= f.label :password, class: "light-blue-text text-darken-4"  %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "light-blue-text text-darken-4" %>
          </div>

          <br>
          <div class="actions">
            <%= f.submit "Log in", class: "btn waves-effect waves-light white" %>
          </div>
        <% end %>

      </div>

      </div>
    </div>
  </div>

</div>
